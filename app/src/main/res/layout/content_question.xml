<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ScrollView
        android:id="@+id/questionScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/question_actions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:onClick="backClick"
                    android:enabled="false"
                    android:drawableLeft="@mipmap/ic_back"
                    android:textColor="@drawable/appbutton"
                    android:text="Back"/>
                <TextView
                    android:id="@+id/questionNo"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:enabled="false"/>
                <Button
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:onClick="nextClick"
                    android:enabled="false"
                    android:drawableRight="@mipmap/ic_next"
                    android:textColor="@drawable/appbutton"
                    android:text="Next"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/progressBarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_actions"
                android:gravity="center_horizontal">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleSmall"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/progressBarView">
                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:text="Question?"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/question_layout">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/options_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/image_layout"
                android:orientation="vertical">
                <Button
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_a"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option1"/>
                <Button
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_b"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option2"/>
                <Button
                    android:id="@+id/option3"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_c"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option3"/>
                <Button
                    android:id="@+id/option4"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_d"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option4"/>
            </LinearLayout>
            <ViewFlipper
                android:id="@+id/solution_flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/options_layout"
                android:layout_marginTop="10dp">
                <include android:id="@+id/contentMain" layout="@layout/content_solution" />
                <include android:id="@+id/postSolution" layout="@layout/content_post_solution" />
            </ViewFlipper>
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/reportQuestionFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="10dp"
        android:foregroundGravity="fill"
        android:translationZ="15dp"
        android:background="@color/primary_darker"
        android:onClick="report"
        android:src="@mipmap/ic_report" />
</android.support.design.widget.CoordinatorLayout>
