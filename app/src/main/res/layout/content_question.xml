<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ScrollView
        android:id="@+id/questionScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/question_actions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:onClick="backClick"
                    android:enabled="false"
                    android:drawableLeft="@mipmap/ic_back"
                    android:textColor="@color/black"
                    android:text="Back"/>
                <TextView
                    android:id="@+id/questionNo"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:onClick="backClick"
                    android:enabled="false"/>
                <Button
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:onClick="nextClick"
                    android:enabled="false"
                    android:drawableRight="@mipmap/ic_next"
                    android:textColor="@color/black"
                    android:text="Next"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/progressBarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_actions"
                android:gravity="center_horizontal">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleSmall"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/question_layout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/quizborders"
                android:layout_below="@id/progressBarView">
                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:maxLines="8"
                    android:scrollbars="vertical"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:text="Question?"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/options_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/question_layout"
                android:orientation="vertical">
                <Button
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_a"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option1"/>
                <Button
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_b"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option2"/>
                <Button
                    android:id="@+id/option3"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_c"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option3"/>
                <Button
                    android:id="@+id/option4"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bnormal"
                    android:textColor="@color/black"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:drawableLeft="@mipmap/ic_d"
                    android:drawablePadding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Option4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/quizborders"
                android:layout_below="@id/options_layout">
                <TextView
                    android:id="@+id/solution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="solution"
                    android:textSize="17dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
